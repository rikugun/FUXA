  "version": "0.2.0",
  "compounds": [
    {
        "name": "Server & Client",
        "configurations": [
            "Server Process",
            "Run Client MarsCode"
        ]
    }
  ],  
  "configurations": [
    {
      "command": "npm run marscode",
      "name": "Run Client MarsCode",
      "localRoot": "${workspaceFolder}/client",
      "remoteRoot": "${workspaceFolder}/client",
      "request": "launch",
      "type": "node-terminal",
      "cwd":"${workspaceFolder}/client"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Server Process",
      "localRoot": "${workspaceFolder}/server",
      "remoteRoot": "${workspaceFolder}/server",
      "program": "${workspaceRoot}/server/main.js",
      "args": [
        "."
      ],
      "cwd":"${workspaceFolder}/server"
    }
  ]
}